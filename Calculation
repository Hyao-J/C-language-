#include"stdio.h"
#define height 5   /*定义常量高度，后面的高度固定*/
int main()
{
	int volume, width,  Long;  /*定义长方体体积、宽度、长度*/
	int area;   /*定义面积*/
	printf("长方体的高度 :%d\n", height);  /*显示高度*/
	printf("请输入长度 ：");   /*显示*/
		scanf_s("%d",& Long);  /*输出长方体的长度*/
		printf("请输入宽度 :");
		scanf_s("%d",& width);
		volume = Long * width * height;  /*长方体体积的运算*/
		area = 2 * (Long * width + Long * height + width * height);   /*长方体面积的运算*/
		printf("长方体的体积 :%d \n", volume);   /*体积结果返回*/
	    printf("长方体的面积 :%d\n", area);        /*面积结果返回*/
}	





#include<stdio.h>
int main()
{
	float PAI = 3.14;         //定义PAI的值
	float r,V;                //定义半径和面积的变量
	scanf_s("%f", &r);        //输入半径
	V = PAI *r*r;             //计算
	printf("圆的面积为: %.5f", V);   //显示结果，.5为保留小数点后5位
}
